<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.kulmerjo.drone.hugocopter">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".MainApplication"
            android:allowBackup="true"
            android:icon="@mipmap/icon_logo"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/icon_logo_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.MaterialComponents.NoActionBar"
            android:fullBackupContent="true">
        <service android:name=".connection.impl.ConnectionServiceTcp" />

        <activity android:name=".control.MainDroneControlActivity" />
        <activity android:name=".notification.NotConnectedToDroneActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts" />
    </application>

</manifest>