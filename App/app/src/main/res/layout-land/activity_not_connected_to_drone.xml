<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundMain"
        tools:context=".notification.NotConnectedToDroneActivity">

    <com.google.android.material.button.MaterialButton
            android:id="@+id/test_connection_again_button"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="214dp"
            android:layout_height="68dp"
            android:layout_marginBottom="80dp"
            android:backgroundTint="#31BBDF"
            android:fontFamily="@font/aldrich"
            android:onClick="onClick"
            android:text="@string/button_test_connection_again_text"
            android:textSize="18sp"
            app:cornerRadius="14dp"
            app:iconPadding="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/no_internet_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.932"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/no_internet_text"
            app:layout_constraintVertical_bias="0.481"
            app:strokeWidth="0dp" />

    <ImageView
            android:id="@+id/logo_simple"
            android:layout_width="187dp"
            android:layout_height="119dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/logo_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/hugocopter_logo_simple_png" />

    <TextView
            android:id="@+id/no_internet_text"
            android:layout_width="402dp"
            android:layout_height="231dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/aldrich"
            android:text="@string/no_connection_text"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textColorLink="#18FFFF"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.142"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_simple" />

    <TextView
            android:id="@+id/still_no_connection_text"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:fontFamily="@font/aldrich"
            android:text="@string/still_no_connection"
            android:textAlignment="center"
            android:textColor="#D50000"
            android:textSize="18sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/test_connection_again_button"
            app:layout_constraintStart_toStartOf="@+id/test_connection_again_button"
            app:layout_constraintTop_toBottomOf="@+id/test_connection_again_button" />
</androidx.constraintlayout.widget.ConstraintLayout>